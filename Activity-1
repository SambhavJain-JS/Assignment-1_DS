#include<iostream>
using namespace std;
 



int max_num(int arr[],int size)
{
    int l;
    if (arr[0]>arr[1])
    {
        l=arr[0];
    }
    else
    {
        l=arr[1];
    }

    for (int j = 2; j < size; j++)
    {
        if (arr[j]>l)
        {
            l=arr[j];
        }
    }
    // cout<<"l="<<l<<endl;
    return l;
}

int min_num(int arr[],int size,int l, int index_s)
{
    int s;
    for (int i = 0; i < size; i++)
    {
        if ((arr[i]<=l)&&(arr[i]!=0))
        {
            s=arr[i];
            index_s=i;
        }
    }
    cout<<"s="<<s<<endl;
    return 0;
}

void print_array(int arr[],int size)
{
    for (int i = 0; i < size; i++)
    {
        cout<<arr[i]<<" ";
    }   
    cout<<endl;
}

int modulus_q(int l,int s)
{
    return l%s;
    // int m=l%s;
    // cout<<"Modulus="<<m;
}

int main()
{
    int l, s, m, index_s;
    int size;
    cout<<"Numberof Elements: ";
    cin>>size;
    int arr[size];

    for (int i = 1; i < size+1; i++)
    {
        cout<<"Enter element "<<i<<": ";
        cin>>arr[i-1];
    }

    cout<<"you entered array: ";
    print_array(arr,size);
    
    cout<<endl;
 
    for (int i = 0; i < size; i++)
    {
        max_num(arr,size);
        min_num(arr,size,l, index_s);
        modulus_q(l,s);
        cout<<endl;
        arr[index_s]=0;
        cout<<"Current Array:";
        print_array(arr,size);
        cout<<endl;
    }

 return 0;
}
