#include<iostream>
using namespace std;
 

int l, s, m, index_s;

void max_num(int arr[],int size)
{
    if (arr[0]>arr[1])
    {
        l=arr[0];
    }
    else
    {
        l=arr[1];
    }

    for (int j = 2; j < size; j++)
    {
        if (arr[j]>l)
        {
            l=arr[j];
        }
    }
    cout<<"l="<<l<<endl;
}

void min_num(int arr[],int size)
{
    s=l;
    for (int i = 0; i < size; i++)
    {
        if ((arr[i]<=s)&&(arr[i]!=0))
        {
            s=arr[i];
            index_s=i;
        }
    }
    cout<<"s="<<s<<endl;
}

void print_array(int arr[],int size)
{
    for (int i = 0; i < size; i++)
    {
        cout<<arr[i]<<" ";
    }   
    cout<<endl;
}

void modulus_q()
{
    m=l%s;
    cout<<"Modulus="<<m;
}

int main()
{
    int size;
    cout<<"Numberof Elements: ";
    cin>>size;
    int arr[size];

    for (int i = 1; i < size+1; i++)
    {
        cout<<"Enter element "<<i<<": ";
        cin>>arr[i-1];
    }

    cout<<"you entered array: ";
    print_array(arr,size);
    
    cout<<endl;
 
    for (int i = 0; i < size; i++)
    {
        max_num(arr,size);
        min_num(arr,size);
        modulus_q();
        cout<<endl;
        arr[index_s]=0;
        cout<<"Current Array:";
        print_array(arr,size);
        cout<<endl;
    }

 return 0;
}
