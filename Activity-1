#include<iostream>
using namespace std;
 

int l;

void max_num(int arr[])
{
    int l,index_l;

    if (arr[0]>arr[1])
    {
        l=arr[0];
    }
    else
    {
        l=arr[1];
    }

    for (int j = 2; j < 5; j++)
    {
        if (arr[j]>l)
        {
            l=arr[j];
            index_l=j;
        }
    }
    cout<<"l="<<l<<endl;
}


void min_num(int arr[])
{
    int s,index_s;

    if (arr[0]==0 && arr[1]==0)
    {
        s=l;

        for (int i = 2; i < 5; i++)
        {
            if ((arr[i]<s)&&(arr[i]!=0))
            {
                s=arr[i];
                index_s=i;
            }
        }
    }

    else if (arr[0]==0 || arr[1]==0)
    {
        if (arr[0] !=0)
        {
            s=arr[0];

            for (int i = 1; i < 5; i++)
            {
                if ((arr[i]<s)&&(arr[i]!=0))
                {
                    s=arr[i];
                    index_s=i;
                }
            }
        }                                                  
        
    }
    else if (arr[0]!=0 && arr[1]!=0)
    {
        if ((arr[0]<arr[1]))
        {
            s=arr[0];
        }
        else
        {
            s=arr[1];                     
        }

        for (int i = 1; i < 5; i++)
        {
            if ((arr[i]<s)&&(arr[i]!=0))
            {
                s=arr[i];
                index_s=i;
            }
        }
    }
    
    cout<<"s="<<s<<endl;
}

int main()
{
    int arr[5]={2,18,1,0,15};


    // Greater

    max_num(arr);
    min_num(arr);

    //Small

    

 
 return 0;
}
